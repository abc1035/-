        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:在线考试系统"
        mc:Ignorable="d"
        Title="在线考试系统" Height="200" Width="400" Icon="窗口图标.jpg" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Label1" Grid.ColumnSpan="2" Content="当前尚有非法软件，是否关闭？" HorizontalAlignment="Left" Height="85" VerticalAlignment="Top" Width="392" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="Button1" Content="立即关闭" HorizontalAlignment="Left" Margin="21,85,0,0" VerticalAlignment="Top" Width="140" Height="84" FontSize="30" Background="White" BorderBrush="White" Click="Button_Click_1"/>
        <Button x:Name="Button2" Content="暂不关闭" HorizontalAlignment="Left" Margin="203,85,0,0" VerticalAlignment="Top" Width="140" Height="84" FontSize="30" Background="White" Click="Button_Click" BorderBrush="White"/>

    </Grid>
</Window>
